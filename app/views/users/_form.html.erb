<%= simple_form_for(@user) do |f| %>
    <%= render "application/forms/errors", errors: @user.errors %>

    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :role, collection: User.roles.keys %> 

    <%= f.input :password, hint: "Not required. Leave blank if you do not want to change this." %>
    <%= f.input :password_confirmation %>

    <%= render 'application/forms/actions', f: f %>
<% end %>
