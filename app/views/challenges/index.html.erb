<% # Connected to the scoring channel to update the score in real time for teams %>
<div data-controller="challenge-updates" data-challenge-updates-user-id-value="<%= current_user.id if current_user&.team? %>">

  <table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>

      <% unless current_user&.team? %>
        <th>Group ID</th>
      <% end %>
      <th>Description</th>
      <th>Points To Win</th>

      <% if current_user&.team? %>
        <th>Obtained Points</th>
        <th>Bonus Points</th>
        <th>Status</th>
      <% else %>        
      <th>Actions</th>
      <% end %>    
      </tr>
  </thead>
  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.number %></td>

        <% unless current_user&.team? %>
          <td><%= challenge.group_id %></td>
        <% end %>

        <td><%= challenge.description %></td>
        <td><%= challenge.points %></td>
        
        <% if current_user&.team? %>
          <% result = @results[challenge.id] %>

          <td data-challenge-updates-target="regularPoints" data-challenge-id="<%= challenge.id %>"><%= result ? result.regular_points : 0 %></td>
          <td data-challenge-updates-target="bonusPoints" data-challenge-id="<%= challenge.id %>"><%= result ? result.bonus_points : 0 %></td>
          <td data-challenge-updates-target="status" data-challenge-id="<%= challenge.id %>"><%= result&.status.presence || 'Not Attempted' %></td>
        <% else %>
          <td><%= render 'application/index_actions', item: challenge %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user&.team? %>
  <p><strong>Total Points: <span data-challenge-updates-target="totalPoints"><%= current_user.total_points %></span></strong></p>
<% end %>

<% if can? :create, Challenge %>
  <%= link_to 'New Challenge', new_challenge_path, class: 'btn btn-primary' %>
<% end %>

<% if can? :import, Challenge %>
  <%= link_to 'Import Challenges', import_form_challenges_path, class: 'btn btn-secondary' %>
<% end %>

<% if can? :export, Challenge %>
  <%= link_to 'Export Challenges', export_challenges_path, class: 'btn btn-secondary' %>
<% end %>
</div>