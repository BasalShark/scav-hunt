<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Description</th>
      <% if current_user&.team? %>
        <th>Max Points</th>
        <th>Obtained Points</th>
        <th>Bonus Points</th>
      <% else %>
        <th>Points</th>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.number %></td>
        <td><%= challenge.description %></td>
        <td><%= challenge.points %></td>
        <% if current_user&.team? %>
          <% result = @results[challenge.id] %>

          <td><%= result ? result.regular_points : 0 %></td>
          <td><%= result ? result.bonus_points : 0 %></td>
        <% end %>

        <td>
          <% if can? :show, challenge %>
            <%= link_to 'Show', challenge, class: 'btn btn-sm btn-info' %>
          <% end %>

          <% if can? :update, challenge %>
            <%= link_to 'Edit', edit_challenge_path(challenge), class: 'btn btn-sm btn-warning' %>
          <% end %>

          <% if can? :destroy, challenge %>
            <%= link_to 'Delete', challenge, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-sm btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

